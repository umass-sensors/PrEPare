    <string name="pref_accelerometer_sampling_rate_default">60</string>

    <string name="pref_gyroscope_sampling_rate_key">gyroscope-sampling-rate</string>
    <string name="pref_gyroscope_sampling_rate_title">Gyroscope Sampling Rate</string>
